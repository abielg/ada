<title> Sign Up</title>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <div class="signup">
      <h2 class="page_title">Sign Up</h2>

      <div class="field">
        <%= f.label "Full Name", class: "page-header", style: "color: white; font-size: 18px;"%><br/>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :email, class: "page-header", style: "color: white; font-size: 18px;"%><br/>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "page-header", style: "color: white; font-size: 18px;" %>
        <% if @validatable %>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control"%>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "page-header", style: "color: white; font-size: 18px;"%><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"%>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-success" %>
      </div>
    </div>
<% end %>

<div class="what">

   <%= render "devise/shared/links"%>

</div>
