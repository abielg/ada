<title> Ada </title>
<div class="container">
	<div class="search-bar">
		<%= link_to "New Challenge", new_challenge_path, class: "btn btn-success"%>
	</div>
    <hr>

        <% @challenges.each do |challenge| %>
            <div class="opening" >
                <h3 class=""><%= link_to challenge.title, challenge %></h3> <%= link_to "#{challenge.user.name}", challenge.user %>
                <div class="jumbotron">
                    <p class=""><%= challenge.description %></p>
                    <p class=""> Language: <%= challenge.language %></p>
                    <% if challenge.user == current_user %>
                        <%= link_to "Delete", challenge, method: :delete, class: "btn btn-default" %>
                    <% end %>
                </div>
            </div>
        <% end %>

</div>